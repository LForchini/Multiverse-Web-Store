<section id="title">
  <div class="container-fluid">
    <!-- Nav Bar -->
    <nav class="navbar navbar-expand-lg">
      <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="http://localhost:3000/"><img
          src="/logo1.png" alt=""></a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
              <a class="nav-link" href="http://localhost:3000/electronics">Electronics</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="http://localhost:3000/jewelery">Jewelery</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="http://localhost:3000/men%27s%20clothing">Men's Clothing</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="http://localhost:3000/women%27s%20clothing">Women's Clothing</a>
          </li>
        </ul>
      </div>
    </nav>
    <a class="cart-a-tag" href="http://localhost:3000/cart">
      <h2 class="cart-container">
        <ion-icon class="cart-icon" name="cart-outline"></ion-icon>
      </h2>
    </a>
  </div>
</section>

<!-- Image and Price and Add -->

<section id="recyclerView">
  <div class="recyclerView-container">
    <div class="row" id="recyclerView-row">
      <div class="col-lg-6 col-md-6">
        <div class="filter-card rcard">
          <div class="rec-img-cont">
            <div class="rec-img"><img src={{item.image}} alt="">
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-5">

        <div class="filter-card rcard">
          <h2 class="rec-h2">{{item.title}}</h2>
          <div class="price-n-pref">
            <h2 class="price">Â£{{item.price}}</h2>

            <form autocomplete="off" id="atc" name="atc">
              <div class="preference">
                <label for="quantity">Quantity</label>
                <input type="text" name="quantity" id="quant-input" value="1">
              </div>
          </div>
          <div class="btn-cont">
            <button type="submit" value="Submit" onclick="addToCart()" class="btn btn-outline-dark btn-lg add-to-cart-btn">Add to
              cart</button>
          </div>
        </div>
        <input type="hidden" id="productId" name="productId" value="{{item.id}}">
        </form>

        <div class="filter-card rcard">
          <h2 class="rec-h2"><strong>Details</strong></h2>
          <p class="rec-h2">{{item.description}}</p>
        </div>

      </div>
    </div>

    <script>

      fetch('{{API_URL}}/carts/add', {headers:{'Content-Type': 'application/json'}, body:{productId: {{item.id}}, quantity: document.getElementById('quant-input').innerText}.toString()})
      function addToCart() {
        const body = {
          productId: {{item.id}},
          quantity: document.getElementById('quant-input').value
        }

        console.log(body)

        fetch('{{API_URL}}/carts/add', {
          method:"POST",
          headers:{
            'Content-Type': 'application/json',
            'cookie': document.cookie
          },
          body: JSON.stringify(body),
          credentials: "include"
        })
      }
    </script>
  </div>
</section>